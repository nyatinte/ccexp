{
  "name": "claude-explorer",
  "type": "module",
  "version": "1.0.0",
  "description": "CLI tool for exploring and managing Claude Code settings and slash commands",
  "author": "AI Assistant",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "start": "bun run ./src/index.tsx",
    "dev": "bun run ./src/index.tsx --watch",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "check": "biome check .",
    "check:write": "biome check --write .",
    "check:unsafe": "biome check --write --unsafe .",
    "knip": "knip",
    "ci": "bun run build && bun run check && bun run knip && bun run test"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@inkjs/ui": "^2.0.0",
    "@types/bun": "^1.2.17",
    "@types/marked-terminal": "^6.1.1",
    "@types/react": "^19.1.8",
    "es-toolkit": "^1.39.5",
    "fs-fixture": "^2.8.1",
    "ink-testing-library": "^4.0.0",
    "knip": "^5.61.3",
    "lefthook": "^1.11.14",
    "path-type": "^6.0.0",
    "ts-pattern": "^5.5.0",
    "tsdown": "^0.12.9",
    "type-fest": "^4.41.0",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4",
    "xdg-basedir": "^5.1.0",
    "zod": "^3.25.67"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@latest"
  },
  "dependencies": {
    "clipboardy": "^4.0.0",
    "fdir": "^6.4.6",
    "ink": "^6.0.1",
    "marked": "^16.0.0",
    "marked-terminal": "^7.3.0",
    "open": "^10.1.2",
    "react": "^19.1.0"
  },
  "trustedDependencies": [
    "fd-find"
  ]
}
